{
    "version": 2,
    "builds": [
        { "src": "package.json", "use": "@vercel/static-build" },
        { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "rewrites": [
        { "source": "/api/(.*)", "destination": "/api/$1.js" },
        { "source": "/(.*)", "destination": "/index.html" }
    ]
}
